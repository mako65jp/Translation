{
  "name": "translation",
  "displayName": "Translation",
  "description": "This extension translates the selected string into Japanese or English.",
  "version": "1.5.0",
  "publisher": "mako65jp",
  "repository": "https://github.com/mako65jp/Translation",
  "engines": {
    "vscode": "^1.37.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.translate",
        "title": "翻訳"
      }
    ],
    "keybindings": [
      {
        "command": "extension.translate",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t",
        "when": "editorHasSelection"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorHasSelection",
          "command": "extension.translate",
          "group": "Translate"
        }
      ]
    },
    "configuration": [
      {
        "title": "translationExt",
        "properties": {
          "translationExt.displayModal": {
            "type": "boolean",
            "default": true,
            "description": "Displays the translation result in modal."
          },
          "translationExt.processingTimeout": {
            "type": "number",
            "default": 750,
            "minimum": 500,
            "maximum": 2000,
            "description": "Translation processing timeout. (ms)"
          },
          "translationExt.pattern": {
            "type": "array",
            "default": [
              {
                "src": "en",
                "target": [
                  "ja",
                  "es",
                  "de",
                  "fr",
                  "it",
                  "zh",
                  "ko"
                ]
              },
              {
                "src": "ja",
                "target": [
                  "en",
                  "es",
                  "de",
                  "fr",
                  "it",
                  "zh",
                  "ko"
                ]
              }
            ],
            "description": "Language combinations to translate."
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/src/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^5.2.6",
    "@types/node": "^10.12.21",
    "@types/vscode": "^1.37.0",
    "glob": "^7.1.4",
    "mocha": "^6.1.4",
    "tslint": "^5.19.0",
    "typescript": "^3.3.1",
    "vscode-test": "^1.0.2"
  },
  "dependencies": {
    "request": "^2.88.0",
    "request-promise": "^4.2.4"
  }
}
